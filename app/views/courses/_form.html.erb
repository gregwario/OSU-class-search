<%= render 'shared/errors', obj: @course %>

<div align="center">
    <% if @institution.logo.attached? %>
        <img src="<%= (url_for(@institution.logo)) %>" alt="<%= @institution.name %> logo" width="700" height="300">
    <% else %>
        <h1><%= @institution.name %></h1>
    <% end %>
</div>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_with( model: @course, local: true, class: "form-horizontal") do |f| %>
        
            <%= f.hidden_field :institution_id, :value => @institution.id %>
            <%= f.hidden_field :major_id, :value => @major.id %>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label "Name" %>
                </div>

                <div class="col-sm-8">
                    <%= f.text_field :coursename, class: "form-control", placeholder: "Name of Course (Required)", autofocus: true %>
                </div>
            </div>


            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label "Course Content" %>
                </div>

                <div class="col-sm-8">
                    <%= f.text_field :course_content, class: "form-control", placeholder: "Description of Course (Required)", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label "Prerequisite(s)" %>
                </div>

                <div class="col-sm-8">
                    <%= f.text_field :prerequisite, class: "form-control", placeholder: "Prerequisite(s) of class", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label "Proctored Exams" %>
                </div>

                <div class="col-sm-8">
                    <%= f.radio_button :proctoredexams, "Yes" %>
                    <%= f.label :proctoredexams, "Yes" %>
                    <%= f.radio_button :proctoredexams, "No" %>
                    <%= f.label :proctoredexams, "No" %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label "Group Work Required" %>
                </div>

                <div class="col-sm-8">
                    <%= f.text_field :groupwork, class: "form-control", placeholder: "Group Work of class", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :textbook %>
                </div>

                <div class="col-sm-8">
                    <%= f.text_field :textbook, class: "form-control", placeholder: "Textbook of class", autofocus: true %>
                </div>
            </div>
     
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-10">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
            
        <% end %>
    </div>
</div>