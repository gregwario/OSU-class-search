<%= render 'shared/errors', obj: @course %>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :coursename %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :coursename, class: "form-control", placeholder: "Name of class", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :cocurse_content %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :course_content, class: "form-control", placeholder: "Description of course", autofocus: true %>
                </div>
            </div>
            <div class = "form-group">
                <div class = "col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            
        <% end %>
        <div class = "col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to courses listing", courses_path %> ]
        </div>
    </div>
</div>