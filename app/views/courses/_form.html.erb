<%= render 'shared/errors', obj: @course %>

<div align="center">
    <% if @institution.logo.attached? %>
        <img src="<%= (url_for(@institution.logo)) %>" alt="<%= @institution.name %> logo" width="700" height="300">
    <% else %>
        <h1><%= @institution.name %></h1>
    <% end %>
</div>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_with( model: @course, local: true, class: "form-horizontal") do |f| %>
        
        
            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :coursename %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :coursename, class: "form-control", placeholder: "Name of class", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :cocurse_content %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :course_content, class: "form-control", placeholder: "Description of course", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :prerequisite %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :prerequisite, class: "form-control", placeholder: "Pre-requisite of class", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :proctoredexams %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :proctoredexams, class: "form-control", placeholder: "Proctored Exams of class", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :groupwork %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :groupwork, class: "form-control", placeholder: "Group Work of class", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :textbook %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :textbook, class: "form-control", placeholder: "Textbook of class", autofocus: true %>
                </div>
            </div>
     
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-10">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
            
        <% end %>
    </div>
</div>