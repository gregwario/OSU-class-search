<h1>Listing all Courses</h1>
<p><%= link_to "Create new Course", new_course_path %></p>

<table>
    <tr>
        <th>Course Name</th>
        <th>Course Content</th>
    </tr>

    <% @courses.each do |course| %>
    <tr>
        <td><%= course.coursename %></td>
        <td><%= course.course_content %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Show', course_path(course) %></td>
        <td><%= link_to 'Delete', course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"} %></td>
    </tr>
    <% end %>
</table>