<h1 align = "center">Create a Course</h1>
<%= render 'shared/errors', obj: @course %>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_for(@course, url: new_reviews_path, html: {class: 'form-horizontal'}) do |f| %>
        
            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :coursename %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :coursename, class: "form-control", placeholder: "Name of class", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
            <%= f.fields_for :reviews do |rf| %>
                <div class = "control-label col-sm-2">
                    <%= rf.label :reviews %>
                </div>
                <div class = "col-sm-8">
                    <%= rf.text_field :reviews_content, class: "form-control", placeholder: "Leave the reviews", autofocus: true %>
                </div>
                <hr>
            <% end %>
            </div>
            
            <div class = "form-group">
                <div class = "col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            
        <% end %>
        <div class = "col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to courses listing", courses_path %> ]
        </div>
    </div>
</div>