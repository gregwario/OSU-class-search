<h1>Listing all Difficulty Scores</h1>
<p><%= link_to "Create new Review", new_review_path %></p>

<% @scores.each do |score| %>
    <div class = "row">
        <div class = "col-xs-8" col-xs-offset-2">
            <div class = "well well-lg">
                <div class = "course-title">
                    <%= link_to score.course_id, difficulty_path(score) %></td>
                </div>
                <div class = "course-body">
                    <%= score.difficulty %></td>
                </div>
                <%= link_to 'Edit', edit_difficulty_path(score), class: "btn btn-xs btn-primary" %>
                <%= link_to 'Delete', difficulty_path(score), method: :delete, data: {confirm: "Are you sure you want to delete this score?"}, class: "btn btn-xs btn-danger" %>
            </div>
        </div>
    </div>
<% end %>