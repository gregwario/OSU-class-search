<%= render 'shared/errors', obj: @institution %>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_with( model: @institution, local: true, class: "form-horizontal") do |f| %>
        
        
            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :name %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name of Institution (Required)", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :city %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :city, class: "form-control", placeholder: "City Name (Required)", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label "State/Province" %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :state, class: "form-control", placeholder: "State/Province Name (if applicable)", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :country %>
                </div>

                <div class = "col-sm-8">
                    <%= f.select :country, options_for_select(@countries_for_select), class: "form-control", prompt: "Select a Country", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :logo %>
                </div>

                <div class = "col-sm-8">
                    <%= f.file_field :logo, class: "form-control"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-10">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        

            
        <% end %>
    </div>
</div>