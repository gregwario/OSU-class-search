<%= render 'shared/errors', obj: @major %>

<div align="center">
    <% if @institution.logo.attached? %>
        <img src="<%= (url_for(@institution.logo)) %>" alt="<%= @institution.name %> logo" width="700" height="300">
    <% else %>
        <h1><%= @institution.name %></h1>
    <% end %>
</div>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_with( model: @major, local: true, class: "form-horizontal") do |f| %>
        
            <%= f.hidden_field :institution_id, :value => @institution.id %>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :majorname %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :majorname, class: "form-control", placeholder: "Name of Major", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :description %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :description, class: "form-control", placeholder: "Description of Major", autofocus: true %>
                </div>
            </div>

           
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-10">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
            
        <% end %>
    </div>
</div>
