<p id="notice"><%= notice %></p>

<h1>Majors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Majorname</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="3">Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td><%= major.majorname %></td>
        <td><%= major.description %></td>
        <td><%= link_to 'Show', major, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_major_path(major), class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', major, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Major', new_major_path, class: "btn btn-primary" %>
