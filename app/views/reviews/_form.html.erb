<%= render 'shared/errors', obj: @review %>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_with( model: @review, local: true, class: "form-horizontal") do |f| %>
            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :reviews_content %>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :reviews_content, class: "form-control", placeholder: "Enter review of class", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class = "control-label col-sm-2">
                    <%= f.label :course_name %>
                </div>
                <div class = "col-sm-8">
                    <%= f.collection_select(:course_id, Course.all, :id, :coursename,
                                                {
                                                include_blank: true
                                                },
                                                class: 'form-control'
                                            )
                    %>
                </div>
            </div>
            
            <div class = "form-group">
                <div class = "col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            
        <% end %>
        <div class = "col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to courses listing", courses_path %> ]
        </div>
    </div>
</div>