<%= render 'shared/errors', obj: @review %>

<div align="center">
    <% if @institution.logo.attached? %>
        <img src="<%= (url_for(@institution.logo)) %>" alt="<%= @institution.name %> logo" width="700" height="300">
    <% else %>
        <h1><%= @institution.name %></h1>
    <% end %>
</div>

<div class="well well-lg">
    <h1 align="center"><%= @course.coursename %></h1>
</div>

<div class = "row">
    <div class = "col-xs-12">
        <%= form_with( model: @review, local: true, class: "form-horizontal") do |f| %>

            <%= f.hidden_field :institution_id, :value => @institution.id %>
            <%= f.hidden_field :major_id, :value => @major.id %>
            <%= f.hidden_field :course_id, :value => @course.id %>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label "Review Content" %>
                </div>

                <div class="col-sm-8">
                    <%= f.text_area :reviews_content, class: "form-control", placeholder: "Review of #{@course.coursename} (Required)", rows: 7 %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :difficulty_score %>
                </div>
                <div class="col-sm-8">
                    <%= f.select :difficulty, ["1 - Very Easy", "2 - Somewhat Easy", "3 - Average", "4 - Challenging", "5 - Very Difficult"], {include_blank: 'Select One (Required)'}, class: 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :hours_spent_per_week %>
                </div>
                <div class="col-sm-8">
                    <%= f.select :time_spent, ["1-3", "4-6", "7-9", "10-12", "13-15"], {include_blank: 'Select One (Required)'}, class: 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label "Career Benefit Score" %>
                </div>
                <div class="col-sm-8">
                    <%= f.select :benefit, ["1 - Not Beneficial", "2 - Hardly Beneficial", "3 - Somewhat Beneficial", "4 - Beneficial", "5 - Very Beneficial"], {include_blank: 'Select One (Required)'}, class: 'form-control' %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            
        <% end %>
    </div>
</div>